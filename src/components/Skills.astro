---
import skills from "@data/skills";
import { Icon } from "astro-icon/components";

const sortedSkills = skills.sort((a, b) => b.yearLearnt - a.yearLearnt);
---

<section id="skills" class="container">
  <h1 class="title">Here's what I know:</h1>
  <p>
    My skills are always a work in progress, and there's always something to
    discover and learn. I've had the privilege of access opportunities to hone
    my skills, so I intend to keep going and get better at them. Especially with
    tech, there are just so many things waiting for you to find! ðŸš€
  </p>

  <div>
    <section id="skills__figure">
      <div id="skills__figure-header">
        <span>tech.js</span>
      </div>
      <div id="skills__figure-main">
        <div id="skills__figure-code">
          <pre><code>{`const skills = ${JSON.stringify(sortedSkills, undefined, 2)}`}</code></pre>
        </div>
        <div id="skills__figure-preview">
          {
            sortedSkills.map((skill) => (
              <div class="skills__figure-skill">
                <div class="skills__figure-skill__header">
                  <Icon name={skill.iconName} />
                  <span>{skill.friendlyName}</span>
                </div>
                <div class="skills__figure-skill__badges">
                  <span class="badge">{skill.yearLearnt}</span>
                  <span class="badge">{skill.category}</span>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</section>

<script>
  const divs: Array<HTMLElement | null> = [
    document.querySelector("#skills__figure-code") as HTMLElement | null,
    document.querySelector("#skills__figure-preview") as HTMLElement | null,
  ];

  // Synchronize scrolling of the two divs using scroll ratio to account for different heights
  const syncingDivs = new WeakMap<HTMLElement, number>();
  const markSyncing = (div: HTMLElement) => {
    const existing = syncingDivs.get(div);
    if (existing) window.clearTimeout(existing);
    const timeoutId = window.setTimeout(() => syncingDivs.delete(div), 350);
    syncingDivs.set(div, timeoutId);
  };
  const isProgrammaticScroll = (div: HTMLElement) => syncingDivs.has(div);

  const syncScroll = (sourceDiv: HTMLElement | null) => {
    if (!sourceDiv) return;
    if (isProgrammaticScroll(sourceDiv)) return; // Ignores scroll events triggered by our own sync

    const sourceScrollable = sourceDiv.scrollHeight - sourceDiv.clientHeight;
    if (sourceScrollable <= 0) return;

    const ratio = sourceDiv.scrollTop / sourceScrollable;

    divs.forEach((otherDiv) => {
      if (!otherDiv || otherDiv === sourceDiv) return;
      const otherScrollable = otherDiv.scrollHeight - otherDiv.clientHeight;
      const targetTop = ratio * otherScrollable;
      markSyncing(otherDiv);
      otherDiv.scrollTo({ top: targetTop, behavior: "smooth" });
    });
  };

  divs.forEach((div) => {
    div?.addEventListener("scroll", () => syncScroll(div));
  });
</script>

<style>
  #skills > div {
    display: flex;
    margin: 3rem -2em 0 -2em;
    align-items: center;
    justify-content: center;
  }

  #skills__figure {
    border-radius: 1em;
    border: 2px solid #1f1f1f;
    background-color: #0a0a0a;
    display: flex;
    aspect-ratio: 1 / 2;
    width: 100%;
    flex-direction: column;
    user-select: none;
    position: relative;
  }

  #skills__figure:before {
    z-index: -1;
    position: absolute;
    content: "";
    width: 100%;
    height: 100%;
    left: 10px;
    top: 0;
    background-image: linear-gradient(
      43deg,
      #4158d066 0%,
      #c850c066 46%,
      #ffcc7033 100%
    );
    filter: blur(20px);
  }

  #skills__figure-header {
    width: 100%;
    box-sizing: border-box;
    padding: 0.5em 1em;
    border-bottom: 1px solid #1f1f1f;
  }

  #skills__figure-header > span {
    font-size: 1em;
  }

  #skills__figure-main {
    display: flex;
    flex-direction: column-reverse;
    flex: 1;
    height: 100%;
  }

  #skills__figure-code {
    flex: 1.5;
    padding: 1em;
    overflow-y: scroll;
    display: none;
  }

  #skills__figure-code * {
    display: block;
    margin: 0;
  }

  #skills__figure-code > code span {
    font-family: "JetBrains Mono", "Courier New", Courier, monospace !important;
  }

  #skills__figure-preview {
    flex: 1;
    border-top: 1px solid #1f1f1f;
    padding: 1em;
    display: flex;
    flex-direction: column;
    gap: 1em;
    overflow-y: scroll;
  }

  .skills__figure-skill {
    display: flex;
    flex-direction: column;
    gap: 1em;
    border-radius: 1em;
    border: 3px solid #1f1f1f;
    background-color: #1f1f1f;
    padding: 1.25em;
    transition:
      transform 0.25s ease-out,
      border 0.25s ease-out;
  }

  .skills__figure-skill:hover {
    transform: translateY(-5px);
    border: 3px solid #2a2a2a;
  }

  .skills__figure-skill__header {
    display: flex;
    gap: 0.75em;
    align-items: start;
  }

  .skills__figure-skill__header > span {
    margin: 0;
    font-weight: 700;
  }

  [data-icon] {
    font-size: 1.5em;
    color: white;
    margin-top: 0.2em;
  }

  .skills__figure-skill__badges {
    display: flex;
    gap: 0.5em;
  }

  @media only screen and (min-width: 768px) {
    #skills > div {
      margin: 3rem 0 0 0;
    }

    #skills__figure {
      aspect-ratio: 2 / 1;
      max-width: 1024px;
    }

    #skills__figure-main {
      flex-direction: row;
    }

    #skills__figure-code {
      display: block;
    }

    #skills__figure-preview {
      flex: 2;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      border-top: none;
      border-left: 1px solid #1f1f1f;
    }
  }
</style>
